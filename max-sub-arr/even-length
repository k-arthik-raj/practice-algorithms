
#include <iostream>
#include<vector>
#include<climits>
using namespace std;
vector<int> max_sum(int arr[], int n)
{
    int max_so_far=0,len=0;
    vector<int> final_max;
    for(int i = 0;i <n; i++)
    {
        max_so_far=0,len=0;
        int l = arr[i];
        for(int j = 1;j<=l;j++)
        {   
            if((l/2)%2!=0)
            {
                max_so_far+=j;
                len++;
            }
            else if((l/2)%2==0 && j>1)
            {
                max_so_far+=j;
                len++;
            }
            else if(l%2==0)
            {
                max_so_far+=j;
                len++;
            }
            
            
        }
        
        final_max.push_back(len);
    }
    return final_max;
}

int main() {
    int a,n;
    cin>>n;
    int arr[n];
    vector<int> arr1;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    
    arr1 = max_sum(arr,n);
    for(auto i = arr1.begin();i != arr1.end();i++)
        cout<<*i<<endl;
	return 0;
}
